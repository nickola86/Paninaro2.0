<% title "Suppliers" %>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  <% for supplier in @suppliers %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= supplier.name %></td>
      <td><%= supplier.phone %></td>
      <td><%= supplier.address %></td>
      <td><%= supplier.email %></td>
      <td class="action"><%= link_to image_tag("show.png", :border => 0, :class=>'show'), supplier %></td>
      <td class="action"><%= link_to image_tag("edit.png", :border => 0, :class=>'edit'), edit_supplier_path(supplier) %></td>
      <td class="action"><%= link_to image_tag("destroy.png", :border => 0, :class=>'destroy'), supplier, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Supplier", new_supplier_path %></p>
