<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>

<% @products.each do |product| %>
  <tr class="<%= cycle("odd","even")%>">
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= to_currency product.price %></td>
    <td class="action"><%= link_to image_tag("show.png",:border => 0, :class => "show"), supplier_product_path(@supplier,product) %></td>
    <td class="action"><%= link_to image_tag("edit.png",:border => 0, :class => "edit"), edit_supplier_product_path(@supplier,product) %></td>
    <td class="action"><%= link_to image_tag("destroy.png",:border => 0, :class => "destroy"), supplier_product_path(@supplier,product), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_supplier_product_path(@supplier.id) %>
